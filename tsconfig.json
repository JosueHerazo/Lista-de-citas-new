
{
    "compilerOptions": {
       "outDir": "./dist",
       "rootDir": "./src",
       "lib": ["esnext"],
       "target": "ESNext",
       "moduleResolution": "nodenext",
       "baseUrl": "./",
       "paths": {
      "*": ["node_modules/*", "src/*"]
        },
       "module": "nodenext",
       "strict": false,
       "sourceMap": true,
       "esModuleInterop": true,
       "declaration": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "allowJs": true,
        

    },
    "include": ["src/**/*.ts"] 
}